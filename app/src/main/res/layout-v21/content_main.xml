<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planodefundo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.appcrisma.afis.appcrisma.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <TextView
        android:id="@+id/fraseView"
        android:layout_width="240dp"
        android:layout_height="139dp"
        android:fontFamily="@font/arizonia"
        android:padding="@dimen/frase_do_dia"
        android:shadowColor="#000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2"
        android:text=" "
        android:textColor="#fff"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textViewConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:shadowColor="#fff"
        android:shadowDx="0.5"
        android:shadowDy="0.5"
        android:shadowRadius="1"
        android:text="@string/cadastro"
        android:textColor="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cadastreView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:shadowColor="#ffff"
        android:shadowDx="0.5"
        android:shadowDy="0.5"
        android:shadowRadius="1"
        android:text="@string/cadastre"
        android:textColor="#000"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewConta" />

    <Button
        android:id="@+id/buttonEntrar"
        style="@android:style/Widget.Material.Light.Button.Borderless"
        android:layout_width="147dp"
        android:layout_height="44dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorPrimary"
        android:text="Acesse sua conta"
        app:layout_constraintBottom_toTopOf="@+id/textViewConta"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
